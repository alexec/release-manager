<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet id="1" author="alex.e.c">
        <createTable tableName="usr">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="email" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="alex.e.c">
        <createTable tableName="component">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="current timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="alex.e.c">
        <createTable tableName="release">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="current timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="sign_off">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="release_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_sign_off_release" references="release(id)"/>
            </column>
            <column name="usr_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_sign_off_usr" references="usr(id)"/>
            </column>
            <column name="status" type="varchar(16)" defaultValue="requested">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="current timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="timestamp" defaultValueDate="current timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="plan">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="current timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="release_component">
            <column name="release_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_rc_release" references="release(id)"/>
            </column>
            <column name="component_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_rc_component" references="component(id)"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="release_component" columnNames="release_id,component_id"/>
    </changeSet>

    <changeSet id="999" author="alex.e.c">
        <insert tableName="release">
            <column name="name" value="Example Release"/>
        </insert>
        <insert tableName="component">
            <column name="name" value="Example Component 1"/>
        </insert>
        <insert tableName="component">
            <column name="name" value="Example Component 2"/>
        </insert>

        <insert tableName="release_component">
            <column name="release_id" valueComputed="(select min(id) from release)"/>
            <column name="component_id" valueComputed="(select min(id) from component)"/>
        </insert>

        <insert tableName="usr">
            <column name="email">alex.e.c@gmail.com</column>
        </insert>

        <insert tableName="sign_off">
            <column name="release_id" valueComputed="(select id from release)"/>
            <column name="usr_id" valueComputed="(select id from usr)"/>
            <column name="status" value="REQUESTED"/>
        </insert>

        <rollback>
            <delete tableName="release_component"/>
            <delete tableName="release"/>
            <delete tableName="component"/>
            <delete tableName="usr"/>
        </rollback>
    </changeSet>

</databaseChangeLog>