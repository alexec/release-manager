<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet id="1" author="alex.e.c">
        <createTable tableName="component">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="current timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="release">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="current timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="plan">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="current timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="alex.e.c">
        <createTable tableName="release_component">
            <column name="release_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="component_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="release_component" columnNames="release_id,component_id"/>
        <addForeignKeyConstraint baseTableName="release_component" baseColumnNames="release_id"
                                 constraintName="fk_rel_comp_rel_id"
                                 referencedTableName="release"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="release_component" baseColumnNames="component_id"
                                 constraintName="fk_rel_comp_comp_id"
                                 referencedTableName="component"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="3" author="alex.e.c">
        <insert tableName="release">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="Example Release"/>
        </insert>
        <insert tableName="component">
            <column name="id"  valueNumeric="1"/>
            <column name="name" value="Example Component"/>
        </insert>

        <insert tableName="release_component">
            <column name="release_id" valueNumeric="1"/>
            <column name="component_id" valueNumeric="1"/>
        </insert>

        <rollback>
            <delete tableName="release_component"/>
            <delete tableName="release"/>
            <delete tableName="component"/>
        </rollback>
    </changeSet>

</databaseChangeLog>